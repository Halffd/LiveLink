{
  "path": "streamlink",
  "mpv": {
    "border": "no"
  },
  "options": {
    "player": "mpv",
    "default-stream": "best",
    "stream-timeout": "60",
    "player-no-close": true,
    "twitch-disable-hosting": true,
    "twitch-disable-ads": true,
    "twitch-low-latency": true,
    "retry-max": "3",
    "retry-streams": "3",
    "ringbuffer-size": "32M",
    "player-continuous-http": true,
    "stream-segment-attempts": "3"
  }
} 