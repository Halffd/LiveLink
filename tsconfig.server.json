{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "rootDir": "src",
    "declaration": true,
    "noEmit": false
  },
  "include": [
    "src/config/**/*.ts",
    "src/types/**/*.ts",
    "src/server/**/*.ts",
    "src/cli/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/routes/**/*",
    "src/lib/**/*",
    "src/hooks.ts",
    "src/hooks.server.ts",
    "src/**/*.test.ts",
    "src/**/*.stories.ts",
    "src/**/*.svelte"
  ]
} 